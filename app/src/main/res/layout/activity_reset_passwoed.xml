<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_base"
    android:theme="@style/Theme.Design"
    tools:context=".activities.MainActivity">
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/emailForResetPassword"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="10dp"
        android:text="Reset your password here"
        android:textAlignment="center"
        android:textColor="#393838"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/emailForResetPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/details_bg"
        android:hint="Enter your email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textAlignment="center"
        tools:ignore="TextFields" />

    <Button
        android:id="@+id/btnSendEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailForResetPassword"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_button_bg"
        android:text="Send Email"
        android:textAllCaps="false" />

    <Button
        android:visibility="gone"
        android:id="@+id/btnGotoLogin"
        style="@style/TextAppearance.AppCompat.Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginVertical="30dp"
        android:text="Go to login page"/>
</RelativeLayout>
